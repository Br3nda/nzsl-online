  - if @page.first_part.present? &&  @page.first_part.translation_path.present?
    Here is the video
    - video_src = path_to_url(@page.first_part.translation_path) 
    "#{video_src}"
    .flowplayer{"data-ratio" => "0.75"}
      %video
        %source{:src => "http://localhost:3000/system/videos/classifiers.webm", :type => "video/webm"}
        / %source{:src => "http://localhost:3000/system/videos/8.tabs.mp4", :type => "video/mp4"}

  .rule_after.clearfix_left
    - if @page.first_part.present?
      .home_content.ckeditor_content
        != @page.first_part.body
    = render :partial => '/signs/sign_of_the_day', :locals => {:sign => Sign.random}
  - @page.page_parts.each_with_index do |page_part, i|
    - next if i.zero?
    .rule_after
      %h2= page_part.title
      = video_translation(page_part) if page_part.translation_path.present?
      .ckeditor_content
        != page_part.body
