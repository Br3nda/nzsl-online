.home-container.typography.small-12.small-centered
  .home-content.small-11.small-centered.medium-9
    .home-title.small-12.medium-7.large-6.float-left
      - if @page.first_part.present?
        != @page.first_part.body
    .home-translation-video.small-12.medium-5.float-right
      .video-container
        %i.fi-play.play-button
        %video{controls: false, preload: true, loop: true, class: "main_video"}
          %source{:src => Rails.application.secrets.s3_bucket_url + @page.first_part.translation_path + ".mp4", :type => "video/mp4"}
          %source{:src => Rails.application.secrets.s3_bucket_url + @page.first_part.translation_path + ".webm", :type => "video/webm"}
        %p.help-link.text-center
          New to this site?
          = link_to "View our help page.", '/help'
.home-sign-container.small-12.medium-8
  = render :partial => '/signs/sign_of_the_day', :locals => {:sign => Sign.random}
