%table
  - page_parts.each do |page_part|
    %tr
    %td{ id: "id#{page_part.id}" }
      = link_to page_part.title, edit_admin_page_page_part_path(@page, page_part)
    %td{width: 100}
      = button_to admin_page_page_part_path(@page, page_part),
        confirm: "Are you sure you want to delete the #{page_part.title} page part?",
        method: :delete, class: 'ir delete' do
        %i.fi-trash
        delete
    %td
%br
= link_to 'New Part', new_admin_page_page_part_path(@page)