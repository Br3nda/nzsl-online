= content_tag :li, :class => 'ui-state-default' do
  %span.ui-icon.ui-icon-arrowthick-2-n-s &nbsp;
  = hidden_field_tag 'item[id]', vocab_sheet_item.id, :class => 'item_id'
  = form_tag vocab_sheet_item_path(vocab_sheet_item), :method => :put do
    = text_field_tag 'item[name]', vocab_sheet_item.name, :class => 'item-name'
    = submit_tag t('vocab_sheet.item.update')
  = form_tag vocab_sheet_item_path(vocab_sheet_item), :method => :delete do
    = submit_tag t('vocab_sheet.item.remove')

