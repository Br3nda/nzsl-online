!!!

%html.no-js{:lang => "en"}

  %head
    %meta{:charset => "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE-edge,chrome=1"}

    = favicon_link_tag
    = favicon_link_tag 'apple-touch-icon.png', :rel => 'apple-touch-icon', :type => 'image/png'

    = stylesheet_link_tag :all, :cache => 'nzsl-cache.css'

    %meta{:name => "description", :content => t('layout.meta_description')}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

    %title= page_title

    /[if lt IE 8]
      %link{:href => '/stylesheets/ie.css', :rel => 'stylesheet', :type => 'text/css', :rel => 'screen, projection'}

    = javascript_include_tag 'modernizr.min.js'
    = csrf_meta_tag

  %body
    %header.layout
      = yield :header
      = render :partial => 'shared/flashes'
      = link_to t('vocab_sheet.link_to'), vocab_sheet_url
    %div#main
      %div#search
        %h1= t('signs.search.form.heading')
        %em= t('signs.search.form.description')

        = form_tag search_signs_path, :method => :get do
          = search_field_tag 'search[s]', session[:search][:query][:s] || t('signs.search.basic.keywords')
          = submit_tag t('signs.search.submit')
      = yield
    %footer.layout
      = yield :footer

    = javascript_include_tag :defaults, :cache => 'nzsl-cache.js'

